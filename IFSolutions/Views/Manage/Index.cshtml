@model IFSolutions.Models.IndexViewModel
@{
    ViewBag.Title = "Gerenciar Conta";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Modifique as configurações da sua conta</h4>
    <hr />
    @if (!String.IsNullOrEmpty(ViewBag.StatusMessage))
    {
        if (ViewBag.MessageType == "Error")
        {
            <div class="alert alert-danger">@ViewBag.StatusMessage</div>
        }
        else
        {
            <div class="alert alert-success">@ViewBag.StatusMessage</div>
        }
    }
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="configDropDownMenu" data-toggle="dropdown" aria-expanded="true">
            <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            Configurações
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
            @if (Model.HasPassword)
            {
                <li role="presentation">@Html.ActionLink("Alterar sua senha", "ChangePassword")</li>
            }
        </ul>
    </div>
    <br />
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="panel-title"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Informações do usuário</div>
        </div>
        <div class="panel-body">
            <table class="table table-hover">
                <tr>
                    <td><strong>@Html.DisplayNameFor(m => m.User.FirstName)</strong></td>
                    <td>@Html.DisplayFor(m => m.User.FirstName)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(m => m.User.LastName)</strong></td>
                    <td>@Html.DisplayFor(m => m.User.LastName)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(m => m.User.Email)</strong></td>
                    <td>@Html.DisplayFor(m => m.User.Email)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(m => m.User.Campus.Description)</strong></td>
                    <td>@Html.DisplayFor(m => m.User.Campus.Description)</td>
                </tr>
                <tr>
                    <td><strong>Tipo de Usuário</strong></td>
                    <td>
                        @foreach (string role in ViewBag.RolesForThisUser)
                        {
                            @role
                        }
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="panel panel-success">
        <div class="panel-heading">
            <div class="panel-title"><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> Estatísticas</div>
        </div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="badge">@ViewBag.PetitionsCount</span>
                    @Html.ActionLink("Petições criadas", "Index", "Petitions")
                </li>
                <li class="list-group-item">
                    <span class="badge">@ViewBag.SignaturesCount</span>
                    Petições assinadas
                </li>
                <li class="list-group-item">
                    <span class="badge">@ViewBag.CommentsCount</span>
                    Comentários efetuados
                </li>
            </ul>
        </div>
    </div>
